/* Colour palette */
:root {
  --main-green: 4, 71, 28;
  --main-blue: 4, 71, 72;
  --main-black: 0, 0, 0;
  --main-white: 255, 255, 255;
}

html {
	font-family: 'Maven Pro', sans-serif;
}

/* Header sizes */
h1 {
	font-size: 5vw;
	font-weight: 500;
	margin: 0;
}
h2 {
	color: rgba(var(--main-blue), 1);
	font-size: 4vw;
	font-weight: 500;
	margin: 0;
}
h3 {
	font-size: 3vw;
	margin: 0;
}

/* Style the navigation menu */
.topnav {
  overflow: hidden;
  background-color: rgba(var(--main-white), 1);
  position: relative;
}

/* Hide the links inside the navigation menu (except for logo/home) */
.topnav #myLinks {
  display: none;
}

/* Style navigation menu links */
.topnav a {
  color: rgba(var(--main-green), 1);
  padding: 5%;
  text-decoration: none;
  font-size: 5vw;
  display: block;
  font-weight: 500;
}

a {
  color: rgba(var(--main-green), 1);
  padding: 5%;
  text-decoration: none;
  font-size: 5vw;
  display: block;
}

#myLinks a {
  border-bottom: 2px solid rgba(var(--main-blue), 1);
}

#myLinks a:last-child {
  border-bottom: none;
}

/* Style the hamburger menu */
.topnav a.icon {
  background: rgba(var(--main-white), 1);
  color: rgba(var(--main-green), 1);
  display: block;
  position: absolute;
  right: 0;
  top: 0;
}

/* Add a grey background color on mouse-over */
.topnav a:hover {
  background-color: rgba(var(--main-blue), 1);
  color: rgba(var(--main-white), 1);
}

/* Style the active link (or home/logo) */
.active {
  background-color: rgba(var(--main-white), 1);
  color: rgba(var(--main-white), 1);
}

/* Map image settings */
.hero {
	width: 100%;
}

footer {
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	padding: 0;
}

footer a {
	padding: 0;
	display: inline;
	font-size: 2vw;
}

small {
	font-size: 2vw;
}

p {
 color: rgba(var(--main-green), 1);
 margin: 0px 0px;
 padding: 0px;
 margin-block-start: 0;
 margin-block-end: 0;
}

.material-symbols-outlined {
	font-size: 5vw;
}


#days-container, #hours-container {
    width:100%;
    height:20%;
    overflow: hidden;
}

#days-list, #hours-list {
    height:15%; /* 40px - more place for scrollbar, is hidden under parent box */
    padding:1%;
    white-space:nowrap;
    overflow-x: scroll;
    overflow-y: hidden;
}

.day, .hour {
    display:inline-block;
    width:30%;
    height:10%;
    line-height:600%;
	font-size: 4vw;
    text-align:center;
    background:#ddd;
}

.day:hover, .hour:hover {
  background-color: rgba(var(--main-blue), 1);
  color: rgba(var(--main-white), 1);
}
.day + .days-list, .hour + .hours-list {
    margin-left:1%;
}

#days-list::-webkit-scrollbar,  #hours-list::-webkit-scrollbar{
	display: none;
}

#solar-energy {
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	padding: 0;
}